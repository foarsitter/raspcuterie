[Unit]
Description=Raspcuterie dashboard
After=network.target

[Service]
User=pi
Environment=FLASK_APP=raspcuterie.dashboard.app
Environment=FLASK_ENV=development
WorkingDirectory=/home/pi/raspcuterie-pi
ExecStart=/home/pi/.virtualenvs/raspcuterie/bin/flask run --host 0.0.0.0 --port 1925
Restart=always

[Install]
WantedBy=multi-user.target